let g:indentLine_char = '|'
let g:indentLine_setConceal = 0

" NERDTree
nmap <leader>n :NERDTreeFocus<CR>

" vim-orgmode configs
let g:org_agenda_files = ['~/org/*.org']

" vimtex configs
