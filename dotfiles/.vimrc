" new settings (testing)

" General settings {{{
" use default leader
syntax on
set background=dark

colorscheme PaperColor
hi Normal guibg=NONE ctermbg=NONE
hi LineNr guibg=NONE ctermbg=NONE
hi SignColumn guibg=NONE ctermbg=NONE
hi ColorColumn guibg=red ctermbg=red
hi clear Conceal

set shortmess+=c
set conceallevel=2
set laststatus=2

" some fold settings
set foldmethod=marker
set foldlevel=1
" }}}

" Formatting {{{
" spacing
set backspace=indent,eol,start
set autoindent
"set smartindent
set tabstop=4       " tab = 4 spaces
set softtabstop=4   " backspace behavior deletes (tabstop) spaces
set shiftwidth=4    " indentation size
set expandtab       " tab = insert spaces
filetype plugin indent on

" line numbers
set number
set ruler

" some text width settings
let txt=80
let &tw=txt
let &colorcolumn=(txt+1)

" searching / highlighting
set incsearch
set hlsearch
set showmatch " show matching (, {, [

" command settings
set wildmenu " command-line completion
set showcmd  " partial commands

" functions
fun! TrimWhitespace()
    let l:save = winsaveview()
    keeppatterns %s/\s\+$//e
    call winrestview(l:save)
endfun
command! TrimWhitespace call TrimWhitespace()

" keybinds
" turn off highlighting
nnoremap <leader><space> :nohlsearch<CR>

" remove trailing whitespace
nnoremap <leader>w :call TrimWhitespace()<CR>

autocmd BufWritePre <buffer> call TrimWhitespace()
" }}}

" Window splitting {{{

" split bindings
nnoremap <C-J> <C-W><C-J>
nnoremap <C-K> <C-W><C-K>
nnoremap <C-L> <C-W><C-L>
nnoremap <C-H> <C-W><C-H>

" open terminal
nnoremap <leader>= :term<CR>

" }}}

" Plugins {{{
call plug#begin()

" vimtex
Plug 'lervag/vimtex'

" syntastic
" Plug 'vim-syntastic/syntastic'

" autocomplete
Plug 'neoclide/coc.nvim', {'branch': 'release'}
"Plug 'ycm-core/YouCompleteMe'

" opencl syntax highlighting
Plug 'brgmnn/vim-opencl'

" nerdtree
Plug 'scrooloose/nerdtree'

" airline status bar
Plug 'vim-airline/vim-airline'
Plug 'vim-airline/vim-airline-themes'

" indentLine
Plug 'Yggdroot/indentLine'

" orgMode
"Plug 'jceb/vim-orgmode'

" taglist
"Plug 'yegeppan/taglist'

" orgMode suggested plugins
"Plug 'mattn/calendar-vim'
"Plug 'tpope/vim-speeddating'
"Plug 'vim-scripts/utl.vim'

" xterm color table
Plug 'guns/xterm-color-table.vim'

" fzf
Plug 'junegunn/fzf', { 'do': { -> fzf#install() } }
Plug 'junegunn/fzf.vim'

call plug#end()
" }}}

